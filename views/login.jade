extends layout

block content
  div(class="container")
    div(class="row")
      div(class="col col-6")
        if(error)
          p= error
        else
          p Log in here
        form(role="form", class="simple-form", action="/login",method="post")
          fieldset
            input(type="text", name="username", placeholder="Enter Username")
            input(type="password", name="password", placeholder="Password")
          input(type="submit", value="Log In")
